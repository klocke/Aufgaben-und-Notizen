<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LibTheme" parent="Theme.AppCompat.Light">
        <item name="dateViewDefStyle">@style/DateViewStyle</item>
    </style>

    <attr name="dateViewDefStyle" format="reference" />

    <style name="DateViewStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:saveEnabled">true</item>
    </style>
</resources>